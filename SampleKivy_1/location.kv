
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import ListAdapter kivy.adapters.listadapter.ListAdapter

LocationForm:

<LocationForm>:
	orientation:'vertical'
	search_input:search_box
	global_search_result_list:search_result_list
	BoxLayout:
		height:'1cm'
		size_hint_y:None
		TextInput:
			id:search_box
			size_hint_x:80
		Button:
			text:'Search'
			size_hint_x:50
			on_press:root.search_location()
		Button:
			text:'Current Location'
			size_hint_x:50
			on_press:root.current_location()
	ListView:
		id:search_result_list
		item_strings:[]	#when no adapter is used
		adapter: 
			ListAdapter(data=[],cls=ListItemButton)	#cls - property of adapter and holds values like listitembutton, listitemlabel



